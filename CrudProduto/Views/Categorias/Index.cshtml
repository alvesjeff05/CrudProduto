@model IEnumerable<CrudProduto.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Categorias</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar</a>
</p>
<table class="table" id="table-categoria">
    <thead>
        <tr>
            <th>
                Categoria
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria1)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCategoria">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdCategoria">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCategoria">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
